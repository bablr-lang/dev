      "request": "launch",
      "name": "Test agAST-vm",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/agast-vm/test/runner.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test language-regex",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/language-regex-vm-pattern/test/test.js"
    },
    {
      "command": "./node_modules/.bin/babel play/test.js",
